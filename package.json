{
  "name": "ben-comet-financial-monitor",
  "version": "1.0.0",
  "description": "Financial products price monitoring system with alerts and probability analysis",
  "main": "electron/main.js",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "npm run dev --workspace=server",
    "dev:client": "npm run dev --workspace=client",
    "dev:electron": "concurrently \"npm run dev:client\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "build": "npm run build --workspaces",
    "build:client": "npm run build --workspace=client",
    "build:server": "npm run build --workspace=server",
    "build:electron": "electron-builder --mac",
    "build:all": "npm run build && electron-builder -mwl",
    "dist:mac": "npm run build && npm run build:electron",
    "start": "npm run start --workspace=server",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.bencomet.financial-monitor",
    "productName": "Ben-COMET",
    "copyright": "Copyright Â© 2024 Ben-COMET",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "electron/**/*",
      "client/dist/**/*",
      "server/dist/**/*",
      "server/node_modules/**/*",
      "!server/src/**/*",
      "!client/src/**/*"
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.finance",
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "title": "Ben-COMET Financial Monitor",
      "backgroundColor": "#667eea"
    },
    "win": {
      "target": ["nsis"],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Finance",
      "icon": "build/icon.png"
    }
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0",
    "cross-env": "^7.0.3"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  }
}
